<div class="container">
    <div class="segment">
       <h1 class="segment-label">Login</h1>
        <%= form_tag '/login' do %> 
            <div class="segment-input">
                <%= text_field_tag :email, nil, placeholder: "eg: your_universe@example.com" %>
            </div>
            <div class="segment-input"> 
                <%= password_field_tag :password, nil, placeholder: "Password" %>
            </div>
            <div class="segment-button-group">
                <%= submit_tag "Login", class: "button-control"%> 
            </div>
        <% end %>
  </div>
</div>