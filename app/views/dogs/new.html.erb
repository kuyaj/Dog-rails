<div class="container">
<div class="segment-group">

  <div class="segment">
    <%= form_with model: @dog do |form| %>
      <div class="segment-input">
        <%= form.text_field :name, placeholder: "Name", required: true%>
      </div>
      <div class="segment-input">
        <%= form.text_field :motto, placeholder: "Motto", required: true%>
      </div>
      <div class="segment-input">
        <%= form.file_field :avatar, placeholder: "Upload photo", class: "inputfile" , required: true %>
        <%= form.label "Choose a file", for: "dog_avatar" %>
      </div> 
      <div class="segment-button-group">  
        <%= form.submit "Create dog", class: "button-control" %>  
      </div>
    <% end %>
  </div>

  <div class="segment-compact" id="segment-preview-image" hidden>
    <div class="segment-image">
      <img id="preview-image">
    </div>
  </div>

</div>
</div>